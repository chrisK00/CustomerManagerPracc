{
	"info": {
		"_postman_id": "d991b197-a6a0-4a58-9d95-ecf080628848",
		"name": "CustomerFinderPracc",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Login and save token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const customer = pm.response.json();\r",
							"\r",
							"pm.test(\"Has properties\", function () {\r",
							"    pm.expect(customer).to.have.property('username');\r",
							"    pm.expect(customer).to.have.property('token');\r",
							"});\r",
							"\r",
							"if (pm.test(\"Has properties\")) {\r",
							"    pm.globals.set('token', customer.token);\r",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"username\": \"Hull\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{custUrl}}/auth/login",
					"host": [
						"{{custUrl}}"
					],
					"path": [
						"auth",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Member Hull",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{custUrl}}/customers/Hull",
					"host": [
						"{{custUrl}}"
					],
					"path": [
						"customers",
						"Hull"
					]
				}
			},
			"response": []
		},
		{
			"name": "Update Hull",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"lookingFor\":\"lol\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{custUrl}}/customers/3",
					"host": [
						"{{custUrl}}"
					],
					"path": [
						"customers",
						"3"
					]
				}
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "custUrl",
			"value": "https://localhost:5001/api"
		}
	]
